	<select id="get" parameterType="int" resultMap="MemberMap">
		SELECT mno, name, email, tel, pwd, photo
		FROM memb
		WHERE mno=#{value}
	</select>
	
	<select id="exist" parameterType="map" resultMap="MemberMap">
		SELECT mno, name, email, tel, add_dt, photo
		FROM memb
		WHERE mno=#{mno} and pwd=#{password}
	</select>

</mapper>