<span style="color: gray"> 
<script type="text/javascript">

var d = new Date();
var t = (d.getHours()*60) + (d.getMinutes()); //t=현재시+분
  if(t >=0 && t <420) { //0~7:00
    document.write('다음 갱신(7시)까지' + Math.floor((420-t)/60) + '시간 남음 <br /> ');
  } else if(t >=420 && t <1260) {
    document.write('다음 갱신(21시)까지' + Math.floor((1260-t)/60) + '시간 남음 <br /> ');
  } else {
    document.write('내일 오전 7시에 갱신됩니다.<br />' + 
        '(다음 갱신까지 ' + Math.floor((1859 -t)/60) +'시간)' );
  }
</script>
</span>
