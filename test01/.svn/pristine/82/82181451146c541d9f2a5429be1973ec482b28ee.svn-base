@import url(http://fonts.googleapis.com/earlyaccess/nanumgothic.css);
* {font-family: 'Nanum Gothic', serif;}

#kCalendar {width: 800px; height: 700px;}

#kCalendar #header {height: 50px; line-height: 50px; text-align: center; font-size: 18px; font-weight: bold}
#kCalendar .button {color: #000; text-decoration: none;}

#kCalendar table { border-collapse: collapse; }
#kCalendar caption {display: none;}

#kCalendar .sun {color: #ff6600;}
#kCalendar .sat {color: #0066cc;}
th {
	border: 1px solid #ddd;
	height: 25px;
	width: 120px;
}
td {
	color: #666;
}
.date-today {
	font-weight: bold;
	font-color: black;
	font-size: large; 
}
.cal-td {
	vertical-align: top;
	height: 90px;
	border: 1px solid #ddd;
}
.img-padding {
	padding: 1px 0px 0px 5px; 
	align: center;
}
.check-compl {
	vertical-align: top;
}
.span-padding-bottom {
	padding-bottom: 5px;
	
}