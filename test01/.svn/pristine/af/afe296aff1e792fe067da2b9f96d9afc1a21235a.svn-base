.card {
  position: relative;
  float: left;
  padding-bottom: 1%;
  width: 100px;
  text-align: center;
}
.nocard-left {
	margin-right: 5px;
	padding-bottom: 1%;
}
.nocard-right {
  margin-left: 547px;	
  top: -3px;
}
.nocard {
	position: relative;
	float: left;
	width: 37px;
	text-align: center;
}
/* card fronts and backs */
.card-front,
.card-back {
  position: absolute;
  top: 5px;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-front,
.card-back {
  -webkit-backface-visibility: hidden;
          backface-visibility: hidden;
  -webkit-transition: -webkit-transform 0.3s;
          transition: transform 0.3s;
}

.card-front {
  background-color: transparent;
}

.card-back {
  background-color: transparent;
  -webkit-transform: rotateY(-180deg);
          transform: rotateY(-180deg);
}

/* card text */
.card-text {
  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  height: 20px;
  color: #fff;
  font-family: "Roboto Slab", serif;
  line-height: 20px;
}

/* hover effect */
.card.effect-hover:hover .card-front {
  -webkit-transform: rotateY(-180deg);
          transform: rotateY(-180deg);
}

.card.effect-hover:hover .card-back {
  -webkit-transform: rotateY(0);
          transform: rotateY(0);
}

