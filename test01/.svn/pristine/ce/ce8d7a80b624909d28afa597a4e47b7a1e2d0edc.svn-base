}
.div-under-text {
	margin: 0 auto;
  width: 576px;
  text-align: center;
}
.font-titillium-web {
  font-size: xx-large;
  font-family: 'Titillium Web', sans-serif;
  letter-spacing: .3em;
  color: #235683;
}
.e-name {
  letter-spacing: .1em;
  word-spacing: .3em;
  color: #f28688;
}
.font-oxygen {
  font-family: 'Oxygen', sans-serif;
  font-size: medium;
  color: #666;
}
.div-top-margin-1 {
  margin-top: 20px;  
}
.div-bottom-margin-1 {
  margin-bottom: 20px;  
}
.div-logo {
  height: 95px;
}
.front-end {
  position: relative;
}
.link-login {
  letter-spacing: .1em;
  color: #333;
  font-size: x-large;
}
.authform {
  position: fixed;
  float: right;
  top: 50px;
  padding-right: 35px;
  width: 100%;
  text-align: right;
  z-index: 1;
}
/* 로그아웃 버튼 */
#logout-btn {
	float: left;
	position: fixed;
	top: 50px;
	right: 30px;
}
#logout-btn img {
-webkit-transition: all .5s ease-in-out;
-moz-transition: all .5s ease-in-out; 
-o-transition: all .5s ease-in-out; 
-ms-transition: all .5s ease-in-out; 
}

#logout-btn img:hover { 
-webkit-transform: rotate(180deg); 
-moz-transform: rotate(180deg); 
-o-transform: rotate(180deg);
-ms-transform: rotate(180deg); 
}


/* 플립 이펙트 부분 */
.card {
  position: relative;
  float: left;
  padding-bottom: 1%;
  width: 100px;
  text-align: center;
}
.nocard-left {
	margin-right: 5px;
	padding-bottom: 1%;
}
.nocard-right {
  margin-left: 547px;	
  top: -3px;
}
.nocard {
	position: relative;
	float: left;
	width: 37px;
	text-align: center;
}

/* 플립 이미지 앞, 뒤 */
.card-front,
.card-back {
  position: absolute;
  top: 5px;
  left: 0;
  width: 100%;
  height: 100%;
}

.card-front,
.card-back {
  -webkit-backface-visibility: hidden;
          backface-visibility: hidden;
  -webkit-transition: -webkit-transform 0.3s;
          transition: transform 0.3s;
}

.card-front {
  background-color: transparent;
}

.card-back {
  background-color: transparent;
  -webkit-transform: rotateY(-180deg);
          transform: rotateY(-180deg);
}

/* 플립 이미지 텍스트(사용 안 함) */
.card-text {
  display: inline-block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  height: 20px;
  color: #fff;
  font-family: "Roboto Slab", serif;
  line-height: 20px;
}

/* 마우스 오버 시 이미지 회전 */
.card.effect-hover:hover .card-front {
  -webkit-transform: rotateY(-180deg);
          transform: rotateY(-180deg);
}

.card.effect-hover:hover .card-back {
  -webkit-transform: rotateY(0);
          transform: rotateY(0);
}

