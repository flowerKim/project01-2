#kCalendar {
  width: 800px;
  float: left;
  margin-left: 10%;
  margin-top: 100px;
}

#kCalendar #header {height: 50px; line-height: 50px; text-align: center; font-size: 18px; font-weight: bold}
#kCalendar .button {color: #000; text-decoration: none;}

#kCalendar table { border-collapse: collapse; }
#kCalendar caption {display: none;}

#kCalendar .sun {color: #ff6600;}
#kCalendar .sat {color: #0066cc;}

#thead-cal > tr > th {
  text-align: center;
  font-size: large;
	border: 1px solid #fff;
	height: 35px;
	width: 120px;
}
.date-today {
	font-weight: bold;
	font-color: black;
	font-size: large; 
}
.cal-td {
  padding-left: 3px;
	vertical-align: top;
	height: 100px;
	border: 1px solid #fff;
	font-size: large;
	color: #333;
}
.img-padding {
	padding: 1px 0px 0px 5px; 
	align: center;
}
.check-compl {
	vertical-align: top;
}
.span-padding-bottom {
	padding-bottom: 5px;
	
}