<link href="css/authform.css" rel="stylesheet" type="text/css" />
<script src='js/app/jquery.leanModal.js' type='text/javascript'></script>
<!-- <link href='https://fonts.googleapis.com/css?family=Play' rel='stylesheet' type='text/css'> -->

<div id='login-btn'>
  <div><a href='#loginmodal' class='modaltrigger'>
    <button class='login-btn'>LOGIN</button></a>
  </div>
</div>

<div id='loginmodal'>
  <div class='login-header'>
	  <h2>LOGIN</h2>
  </div>
  <form action='auth/login.do' method='post'>
    <div class='txt-field'>
      <label>BITIN No</label>
      <input type='text' name='no' id='mno'>
    </div>
    <div class='txt-field'>
      <label>Password</label>
      <input type='password' name='password' id='password'>
      <div id='message'></div>
    </div>
    <div class='btn-field' id='login-button'>
      <button type='submit'>LOGIN</button>
    </div>
  </form>
</div>

<!-- 윈도우 -->
<script type='text/javascript'>
$(function(){
  $('#loginform').submit(function(e){
    return false;
  });
  $('#login-btn').click(function(event){
  	event.preventDefault();
  })
  $('.modaltrigger').leanModal({ top: 110, overlay: 0.7, closeButton: '.hidemodal' });
});
</script>
<!-- 윈도우 -->
<script>
requirejs(['app/auth'], function(auth) {
  auth.init();
});
</script>
